<ScrollView
    android:id="@+id/sc_profile_fragment_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.simonyan51.a51movies.ui.fragment.main.MovieFragment">

        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:id="@+id/iv_profile_image"
            android:layout_height="250dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop"
            android:layout_width="match_parent" />
        <LinearLayout
            android:layout_below="@+id/iv_profile_image"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_person" />
            <TextView
                android:id="@+id/tv_profile_username"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_holo_dark"
                android:text="Gnel Simonyan"
                />
        </LinearLayout>
        <Button android:id="@+id/logout"
            android:layout_marginTop="320dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"/>

    </RelativeLayout>
</ScrollView>
